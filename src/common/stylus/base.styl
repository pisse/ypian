*
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

*:before, *:after
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

.clearfix:after {
  content: ".";
  display: block;
  clear: both;
  overflow: hidden;
  height: 0;
  visibility: visible
}
